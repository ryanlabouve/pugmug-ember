
{{outlet}}


<div class="other-container">
  <div class=" pull-left">
    Viewing {{currentPug}} / {{totalPugs}}
  </div>
  <div class="pull-right">
    {{pugsInCart}}&nbsp;<i class="fa fa-shopping-cart"></i>
  </div>
</div>
<div class="mug">
  <img src="/mug.jpg" alt="mug"/>
  <div class="pug-list-container">
    <ul class="pug-list" {{bind-attr style=marginLeft}}>
      {{#each pug in model}}<li><img {{bind-attr src=pug.url alt=put.title}} /></li>{{/each}}
    </ul>
  </div>
</div>

<div class="btn-container clearfix">
  <a href="#" class="circlebtn circlebtn-skip pull-left" {{action "skip"}}><i class="fa fa-repeat"></i></a>
  <a href="#" class="circlebtn circlebtn-add pull-right" {{action "add"}}><i class="fa fa-shopping-cart"></i></a>
</div>
